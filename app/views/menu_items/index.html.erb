<header class="navigationbar">
    <diV class="dashboard-text">DASHBOARD</div>
        <div class="logo">
        <img class="navbar-brand" src="<%= asset_path('logo.png') %>" />
    </div>
    <p class="restaurantname">CHEFOODU</p>
        <a
            href="#"
            class="nav-link dropdown-toggle"
            id="logout"
            data-toggle="dropdown"
            aria-haspopup="true"
            aria-expanded="false"
            >
            <i id="loggedin-icon" class="fas fa-user-circle fa-3x" aria-hidden = "true"></i>
            </a>
            <div
            class="dropdown-menu dropdown-menu-right"
            aria-labelledby="logout"
            >
            <p class="logout-link"><%= link_to "Sign-out", destroy_session_path, method: "delete" %></p>
            </div>
</header>

<section class="New-Menu-Item">
    <%= form_with(url: "/menu_items", method: "POST", class: "Add-Menu-item") do |f| %>

        <%= f.text_field("name", class: "Menu-item-Name", placeholder: "Bored Of Existing Menus Items?") %>
        <%= f.number_field("price", class: "Menu-item-price", placeholder: "A Bit More Cheaper") %>
        <%= f.text_field("description", class: "Menu-item-description", placeholder: "Anything Special About The Food Item?") %>
        <%= f.text_field("category", class: "Menu-item-category", placeholder: "Category?") %>
        <div class= "Menu-item-image">
            <p class="image-text">IMAGE</p>
            <%= f.file_field :image %>
        </div>
        <%= f.submit("Add", class: "Addmenu-item-Button") %>

    <% end %>
</section>

<section>
    <%= render partial: "Menu-Items-List", locals: { menu_items: MenuItem.all } %>
</section>

<script>
    function toggleSidebar(){
    document.getElementById("sideMenu").classList.toggle('active');
    }
</script>
