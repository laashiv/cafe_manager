<section class="New-Menu-Item">
    <%= form_with(url: "/menu_items", method: "POST", class: "Add-Menu-item") do |f| %>
        <%= f.text_field("name", class: "Menu-item-Name", placeholder: "bored of existing menus items? add one") %>
        <%= f.number_field("price", class: "Menu-item-price", placeholder: "a bit more cheaper") %>
        <%= f.text_field("description", class: "Menu-item-description", placeholder: "anything special about the food item?") %>
        <%= f.text_field("category", class: "Menu-item-category", placeholder: "category?") %>
        
        <div class= "Menu-item-image">
        <%= f.label "Item Image:  " %>
        <%= f.file_field :image %>
        </div>
  
        <%= f.submit("Add", class: "Addmenu-item-Button") %>
    <% end %>
</section>

