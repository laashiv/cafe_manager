<main class="cart-main">
<a href="/cdash" class="close"></a>
<div class="px-4 px-lg-0">
  <div class="pb-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 p-5 bg-white rounded shadow-sm mb-5">

          <!-- Shopping cart table -->
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col" class="border-0 bg-light">
                    <div class="p-2 px-3 text-uppercase">Product</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase">Price</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase">Quantity</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase">Remove</div>
                  </th>
                </tr>
              </thead>
              <tbody>
                <% cart_items = @cart.cart_items %>
                <%= render partial: "items-section", locals: {
                  cart_items: cart_items }
                %>
              </tbody>
            </table>
          </div>
          <!-- End -->
        </div>
      </div>

      <div class="row py-5 p-4 bg-white rounded shadow-sm">
        <div class="col-lg-6">
          <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">Coupon code</div>
          <div class="p-4">
            <p class="font-italic mb-4">If you have a coupon code, please enter it in the box below</p>
            <div class="input-group mb-4 border rounded-pill p-2">
              <input type="text" placeholder="Apply coupon" aria-describedby="button-addon3" class="form-control border-0">
              <div class="input-group-append border-0">
                <button id="button-addon3" type="button" class="btn btn-dark px-4 rounded-pill"><i class="fa fa-gift mr-2"></i>Apply coupon</button>
              </div>
            </div>
          </div>
          <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">Instructions for delivery boy</div>
          <div class="p-4">
            <p class="font-italic mb-4">If you have some information for the delivery boy, leave them here with the delivery address</p>
            <textarea name="" cols="30" rows="2" class="form-control"></textarea>
          </div>
        </div>
          <div class="col-lg-6">
            <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">Order summary </div>
              <div class="p-4">
                <ul class="list-unstyled mb-4">
                  <li class="d-flex justify-content-between py-3 border-bottom">
                    <strong class="text-muted">Order Subtotal </strong>
                    <strong class="sub"><i class="fas fa-rupee-sign"></i><div id="subtotal"><%= @cart.total %></div></strong>
                  </li>
                  <li class="d-flex justify-content-between py-3 border-bottom">
                    <strong class="text-muted">Shipping </strong>
                    <strong><i class="fas fa-rupee-sign"></i>10.00</strong>
                  </li>
                  <li class="d-flex justify-content-between py-3 border-bottom">
                    <strong class="text-muted">Tax</strong>
                    <strong><i class="fas fa-rupee-sign"></i>0.00</strong>
                  </li>
                  <li class="d-flex justify-content-between py-3 border-bottom">
                    <strong class="text-muted">Total</strong>
                    <h5 class="font-weight-bold"><i class="fas fa-rupee-sign"></i><div id="total"><%= @cart.total + 10 %></div></h5>
                  </li>
                </ul>
                <%= form_with(url: "/orders", method: "post") do %>
                  <%= submit_tag("Procceed to checkout", class: "btn btn-dark rounded-pill py-2 btn-block") %>
                <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</main>
