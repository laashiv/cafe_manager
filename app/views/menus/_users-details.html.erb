<section style="padding-top: 18.31vh">

    <% users.each do |user| %>
        <% if user.role == "customer" %>
            <div class="user-list-container">
                <div style="width: 300px">
                    <p class="user-id"><%= user.id %></p>
                    <div style="display: flex">
                        <p style="padding-left: 10px">Username:</p>
                        <p class="user-name"><%= user.name %></p>
                    </div>
                    <div style="display: flex">
                        <p style="padding-left: 10px">Mail:</p>
                        <p class="user-mail"><%= user.email %></p>
                    </div>
                </div>
                <div style="padding-left: 50px">
                    <%= form_with(url: "/users/#{user.id}", method: "put") do %>
                        <%= submit_tag("Make As Clerk" , class: "change-role") %>
                    <% end %>
                </div>
            </div>
        <% end %>
    <% end %>

</section>
